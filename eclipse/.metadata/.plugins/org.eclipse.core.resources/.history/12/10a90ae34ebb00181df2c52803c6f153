package com.spaceboyross.gundam.gui;

import com.spaceboyross.gundam.capabilities.human.Human;
import com.spaceboyross.gundam.capabilities.interfaces.IHumanCapability;
import com.spaceboyross.gundam.utils.CapabilityUtils;
import com.spaceboyross.gundam.utils.UIUtils;

import net.minecraft.client.Minecraft;
import net.minecraft.client.gui.GuiScreen;
import net.minecraft.client.resources.I18n;
import net.minecraft.entity.player.EntityPlayer;

public class NewtypeGUI extends GuiScreen {
	
	private EntityPlayer player;
	private IHumanCapability nt;
	
	public NewtypeGUI() {
		this(Minecraft.getMinecraft().player);
	}
	
	public NewtypeGUI(EntityPlayer player) {
		super();
		
		this.player = player;
		this.nt = CapabilityUtils.getCapability(this.player,Human.MAX_HUMAN_CAPABILITY,Human.DEFAULT_FACING);
	}
	
	@Override
	public void initGui() {
		this.buttonList.clear();
	}
	
	@Override
	public boolean doesGuiPauseGame() {
		return false;
	}
	
	@Override
	public void drawScreen(int mouseX,int mouseY,float partialTicks) {
		super.drawScreen(mouseX,mouseY,partialTicks);
	}
}
