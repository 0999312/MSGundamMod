package com.spaceboyross.gundam.input;

import net.minecraft.client.Minecraft;
import net.minecraftforge.fml.common.eventhandler.SubscribeEvent;
import net.minecraftforge.fml.common.gameevent.InputEvent;

public class InputHandler {
	@SubscribeEvent
	public void onKeyInput(InputEvent.KeyInputEvent event) {
		if(KeyBindings.useVernier.isPressed() && Minecraft.getMinecraft().player.inventory.armorItemInSlot(2).getDisplayName().equals("Portable Vernier")) {
			Minecraft.getMinecraft().player.addVelocity(Minecraft.getMinecraft().player.motionX,1.0,Minecraft.getMinecraft().player.motionY);
		}
	}
}