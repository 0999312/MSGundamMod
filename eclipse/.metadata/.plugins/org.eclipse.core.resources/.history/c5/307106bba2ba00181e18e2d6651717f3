package com.spaceboyross.gundam.net;

import java.util.UUID;

import com.spaceboyross.gundam.capabilities.human.Human;
import com.spaceboyross.gundam.capabilities.interfaces.IHumanCapability;
import com.spaceboyross.gundam.enums.EHumantypes;
import com.spaceboyross.gundam.ms.MSRegistry;
import com.spaceboyross.gundam.ms.MobileSuit;

import io.netty.buffer.ByteBuf;
import net.minecraft.entity.player.EntityPlayerMP;
import net.minecraft.util.math.Vec3d;
import net.minecraft.world.World;
import net.minecraftforge.fml.common.network.simpleimpl.IMessage;
import net.minecraftforge.fml.common.network.simpleimpl.IMessageHandler;
import net.minecraftforge.fml.common.network.simpleimpl.MessageContext;

public class PacketHuman implements IMessage {
	
	private boolean shownHumantypeMenu = false;
	private int humantype = 0;
	private UUID msUUID = null;
	private int msID = -1;
	
	public PacketHuman() {}
	
	public PacketHuman(IHumanCapability nt) {
		this.shownHumantypeMenu = nt.hasShownHumantypeMenu();
		this.humantype = nt.getHumantype().ordinal();
		if(nt.getMS() != null) this.msUUID = nt.getMS().getUniqueID();
	}

    @Override
    public void fromBytes(ByteBuf buf) {
    	this.shownHumantypeMenu = buf.readBoolean();
    	this.humantype = buf.readInt();
    	int uuidLength = buf.readInt();
    	if(uuidLength > 0) {
    		byte uuid[] = new byte[uuidLength];
    		buf.readBytes(uuidLength).getBytes(0,uuid);
    		this.msUUID = UUID.nameUUIDFromBytes(uuid);
    	}
    }

    @Override
    public void toBytes(ByteBuf buf) {
    	buf.writeBoolean(this.shownHumantypeMenu);
    	buf.writeInt(this.humantype);
    	if(this.msUUID != null) {
    		buf.writeInt(this.msUUID.toString().length());
    		buf.writeBytes(this.msUUID.toString().getBytes());
    	} else buf.writeInt(0);
    }

    public static class Handler implements IMessageHandler<PacketHuman,IMessage> {
        @Override
        public IMessage onMessage(PacketHuman message,MessageContext ctx) {
            ctx.getServerHandler().player.getServerWorld().addScheduledTask(() -> handle(message,ctx));
            return null;
        }

        private void handle(PacketHuman message,MessageContext ctx) {
            EntityPlayerMP playerEntity = ctx.getServerHandler().player;
            World world = playerEntity.getEntityWorld();
            IHumanCapability nt = Human.getHuman(playerEntity);
            nt.setHasShownHumantypeMenu(message.shownHumantypeMenu);
            nt.setHumantype(EHumantypes.values()[message.humantype]);
        }
    }
}
